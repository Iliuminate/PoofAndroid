<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item #      Value: $$$$"
        android:id="@+id/tx1"
        android:maxLines="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $$$$"
        android:id="@+id/tx2"
        android:layout_below="@+id/tx1"
        android:layout_alignRight="@+id/tx1"
        android:layout_alignEnd="@+id/tx1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:id="@+id/tx3"
        android:layout_below="@+id/tx2"
        android:layout_alignLeft="@+id/tx1"
        android:layout_alignStart="@+id/tx1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/tx4"
        android:layout_alignTop="@+id/tx3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:id="@+id/tx5"
        android:layout_alignTop="@+id/tx4"
        android:layout_alignRight="@+id/tx2"
        android:layout_alignEnd="@+id/tx2" />

</RelativeLayout>